generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Rubric {
  courseId     String       @map("course_id")
  courseWorkId String       @map("course_work_id")
  rubricItems  RubricItem[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@id([courseId, courseWorkId])
  @@map("rubric")
}

model RubricItem {
  id           Int     @id @default(autoincrement())
  title        String
  points       Float
  description  String?
  rubric       Rubric  @relation(fields: [courseId, courseWorkId], references: [courseId, courseWorkId])
  courseId     String  @map("course_id")
  courseWorkId String  @map("course_work_id")

  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  obtainedPoints Points[]

  @@map("rubric_items")
}

model Points {
  id           Int        @id @default(autoincrement())
  rubricItem   RubricItem @relation(fields: [rubricItemId], references: [id])
  rubricItemId Int
  points       Float
}
